package dam;

public class Globos {
	
	public final int maximoDeGlobos = 10;
	public final int volumenInicial = 1;
	private int[] globos;
	
	public Globos() {
		globos = new int[maximoDeGlobos];
		for (int i = 0; i < globos.length; i++) {
			globos[i] = volumenInicial;
		}
	}
	
	public boolean explotado(int i) {
		return globos[i] == 0;
	}	

}
